.view-container {
  display: flex;
  flex-direction: column;
  /* margin: 15rpx; */
}

.top-view-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx;
}

.top-view-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
}

.top-view-title {
  font-size: 34rpx;
  color: #003;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.list-item-button-hover{
  background: #0099ff;
}

.top-view-infodetail {
  font-size: 32rpx;
  color: #003;
}

.gray-view {
  flex: 1;
  background: #ddd;
  height: 45rpx;
}

.list-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx;
}

.list-item-button {
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: white;
}

.list-item-text {
  font-size: 32rpx;
  color: #003;
}

.list-item-image {
  width: 30rpx;
  height: 30rpx;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ddd;
}


