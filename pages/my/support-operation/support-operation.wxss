/* /pages/my/support-operation/support-operation.wxss */

page{
  height: 100%;
}

.view-container {
  display: flex;
  flex-direction: column;
  height: 100%
}

.top-view-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 5rpx;
}

.top-view-image {
  width: 300rpx;
  height: 300rpx;
  margin-top: 24rpx;
}

.top-view-text {
  font-size: 30rpx;
    margin: 32rpx;
  font-weight: bold;
}

.gray-view {
  background: #ddd;
  height: 45rpx;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 96rpx;
}

.list-item-hover{
  background: #eee;
}

.list-item-image {
  width: 128rpx;
  height: 128rpx;
  margin: 24rpx;
}

.list-item-image-share {
  width: 68rpx;
  height: 68rpx;
  margin: 24rpx;
  margin-left: 50rpx;
}

.list-item-text-container {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.list-item-text-title{
  font-size: 30rpx;
  color: #003;
}

.list-item-text-info {
  font-size: 28rpx;
  color: #003;
  margin-left: 24rpx;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ddd;
}

.list-item-enterimage{
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

button::after {
  border: none;
  border-radius:0;
}

.btn-share{
  display: flex;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background: white;
    height: 96rpx;
}

.btn-share-hover{
  background-color: #eee;
}

.share-item{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.share-left-image{
  width: 64rpx;
  height: 64rpx;
}

.right-arrow {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 32rpx;
}
