/* /pages/my/support-operation/support-operation.wxss */

.view-container {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
}

.top-view-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 5rpx;
}

.top-view-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.top-view-text {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.gray-view {
  flex: 1;
  background: #ddd;
  height: 45rpx;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list-item-hover{
  background: #0099ff;
}

.list-item-image {
  width: 128rpx;
  height: 128rpx;
  margin: 24rpx;
}

.list-item-text-container {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.list-item-text-title{
  font-size: 28rpx;
  color: #003;
}

.list-item-text-info {
  font-size: 24rpx;
  color: #003;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ddd;
}

.list-item-enterimage{
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}
