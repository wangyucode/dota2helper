/* pages/match/match.wxss */
.view-container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #151a20;
  justify-content: space-between;
}

.image {
  width: 100%;
}

text {
  margin-left: 16rpx;
  color: #fff;
  margin-top: 8rpx;
  font-size: 28rpx;
}

.title {
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 16rpx;
}

.status {
  position: absolute;
  right: 0;
  height: 156rpx;
  width: 156rpx;
}

.prize{
  font-weight: bold;
  color: #a43927;
}

.rules {
  font-size: 24rpx;
  margin-top: 4rpx;
  margin-bottom: 16rpx;
}