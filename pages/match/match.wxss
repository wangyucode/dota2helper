/* pages/match/match.wxss */

.view-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

swiper {
  width: 100%;
  height: 400rpx;
}

.banner-image {
  height: 100%;
  width: 100%;
}

.banner-name {
  position: absolute;
  left: 0;
  right: 0;
  padding: 8rpx;
  font-size: 32rpx;
  color: #eeeeee;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.0));
}

.banner-left-bottom {
  position: absolute;
  padding: 8rpx;
  bottom: 0;
  background: linear-gradient(to right, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.0));
}

.banner-right-bottom {
  position: absolute;
  padding: 8rpx;
  bottom: 0;
  right: 0;
  text-align: right;
  background: linear-gradient(to left, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.0));
}

.banner-prize,
.banner-time,
.banner-location {
  font-size: 24rpx;
  color: #eeeeee;
  display: block;
}

.status-image {
  position: absolute;
  height: 128rpx;
  width: 128rpx;
  right: 0;
}

.date-match-container {
  align-self: center;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img-ta {
  width: 474rpx;
  height: 334rpx;
  margin-top: 200rpx;
}

.text-no-match {
  display: block;
  font-size: 28rpx;
  color: #555;
  text-align: center;
}

.date-container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.date-hbox {
  display: flex;
  align-items: center;
  width: 100%;
  background: #ddd;
  padding: 8rpx;
}

.date {
  font-size: 26rpx;
}

.date-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.match-name {
  display: block;
  text-align: center;
  font-size: 20rpx;
  color: #555;
}

.match-hbox {
  width: 100%;
  display: flex;
  padding: 12rpx;
  align-items: center;
  border-bottom: 1rpx #ddd solid;
}

.time {
  font-size: 24rpx;
  color: #333;
}

.bo {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #333;
}

.vbox {
  width: 120rpx;
  align-items: center;
}

.dividing-line-v {
  height: 80rpx;
  margin-left: 12rpx;
}

.match-name-team-box {
  display: flex;
  flex-direction: column;
  width: 80vw;
}

.team-box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.team-logo {
  width: 56rpx;
  height: 56rpx;
  margin: 12rpx;
}

.team-name {
  font-size: 26rpx;
  min-width: 160rpx;
  max-width: 160rpx;
  text-align: center;
}

.vs {
  font-size: 20rpx;
  color: #a43927;
}

.match-top {
  position: fixed;
  top: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-shadow: 0rpx 2rpx 3px #aaa;
  background: white;
}

.top-item {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: flex-end;
  height: 100%;
}

.top-center-line {
  height: 30rpx;
  width: 3rpx;
  background: #ddd;
}

.baike-top-select {
  font-size: 30rpx;
  text-align: center;
  color: #a43927;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.baike-top-nomal {
  font-size: 30rpx;
  text-align: center;
  color: #000;
  font-weight: normal;
  margin-bottom: 24rpx;
}

.top-bottom-line {
  width: 100%;
  height: 8rpx;
  background: #a43927;
}

.date-match-container {
  margin-top: 80rpx;
}

.team-container {
  margin-top: 80rpx;
}

.team-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 24rpx;
}

.header-rank-text {
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.header-team-text {
  width: 240rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.header-nation-text {
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.header-integral-text {
  width: 96rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.team-score-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx;
}

.active .team-score-container {
  background-color: #ddd;
}

.body-rank-text {
  width: 96rpx;
  text-align: center;
  font-size: 28rpx;
}

.team-score-logo {
  width: 32px;
  height: 48rpx;
}

.body-name-text {
  width: 200rpx;
  font-size: 28rpx;
}

.team-nation {
  width: 56rpx;
  height: 36rpx;
}

.body-integral-text {
  padding-left: 48rpx;
  display: inline-block;
  text-align: center;
  font-size: 28rpx;
}

.list-item-image {
  width: 30rpx;
  height: 30rpx;
  transition: transform 0.5s;
}

.active .list-item-image {
  transform: rotate(90deg)
}

.team {
  display: flex;
  flex-direction: column;
  max-height: 74rpx;
  overflow: hidden;
  transition: max-height 0.5s;
  border-bottom: #ddd 1rpx solid;
}

.active.team {
  max-height: 1000rpx;
}

.team-member-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx #ddd solid;
}

.member-img,
.record-img {
  width: 64rpx;
  height: 64rpx;
  flex-shrink: 0;
}

.member-name {
  font-size: 24rpx;
  white-space: nowrap;
}

.member-note {
  font-size: 22rpx;
  color: #a43927;
}

.team-member {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  gap: 8rpx;
}


.team-record {
  margin: 0 64rpx;
  padding: 4rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.team-record:not(:last-child) {
  border-bottom: #ddd 1rpx solid;
}

.record-name,
.record-rank,
.record-point {
  font-size: 24rpx;
}