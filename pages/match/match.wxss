/* pages/match/match.wxss */
.view-container{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.date-match-container{
    align-self: center;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.img-ta{
    width: 474rpx;
    height: 334rpx;
    margin-top: 200rpx;
}

.text-no-match{
    display: block;
    font-size: 28rpx;
    color:#555;
    text-align: center;
}

.date-container{
    display: flex;
    flex-direction: column;
    width: 100%;
}

.date-hbox{
    display: flex;
    align-items: center;
    width: 100%;
    background: #ddd;
    padding: 8rpx;
}

.date{
    font-size: 26rpx;
}

.date-icon{
    width: 40rpx;
    height: 40rpx;
    margin-right: 12rpx;
}


.match-name{
    display: block;
    text-align: center;
    font-size: 20rpx;
    color: #555;
}

.match-hbox{
    width: 100%;
    display: flex;
    padding: 12rpx;
    align-items: center;
}

.time{
    font-size: 24rpx;
    color: #333;
}

.bo{
    margin-top: 8rpx;
    font-size: 24rpx;
    color: #333;
}

.vbox{
    width: 120rpx;
    align-items: center;
}

.dividing-line-v{
    height: 80rpx;
    margin-left: 12rpx;
}

.match-name-team-box{
    display: flex;
    flex-direction: column;
    width: 80vw;
}

.team-box{
    display: flex;
    justify-content: center;
    align-items: center;
}

.team-logo{
    width: 80rpx;
    height: 48rpx;
    margin: 12rpx;
}

.team-name{
    font-size: 26rpx;
    min-width: 160rpx;
    max-width: 160rpx;
    text-align: center;
}

.vs{
    font-size: 20rpx;
    color: #a43927;
}

.match-top{
    position: fixed;
    top: 0;
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    box-shadow: 0rpx 2rpx 3px #aaaaaa;
    background: white;
}


.top-item{
    display: flex;
    flex-direction: column;
    flex: 1;
    justify-content: flex-end;
    height: 100%;
}

.top-center-line{
    height: 30rpx;
    width: 3rpx;
    background: #ddd;
}

.baike-top-select{
    font-size: 30rpx;
    text-align: center;
    color: #a43927;
    font-weight: bold;
    margin-bottom: 16rpx;
}

.baike-top-nomal{
    font-size: 30rpx;
    text-align: center;
    color: #000;
    font-weight: normal;
    margin-bottom: 24rpx;
}

.top-bottom-line{
    width: 100%;
    height: 8rpx;
    background: #a43927;
}

.date-match-container{
    margin-top: 80rpx;
}

.ti-container{
    margin-top: 80rpx;
}

.ti-match-container{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12rpx;
}

.ti-match-status{
    font-size: 24rpx;
    color: rgb(27, 127, 209);
    border: 4rpx solid rgb(27, 127, 209);
    border-radius: 16rpx;
    padding: 4rpx;
}

.ti-name-date-box{
    display: flex;
    flex-direction: column;
    flex: 2;
    margin-left: 12rpx;
}

.ti-type-bonus-box{
    display: flex;
    flex-direction: column;
    flex: 1;
    margin-right: 12rpx;
}

.ti-match-type, .ti-match-name{
    font-size: 22rpx;
    color: #555;
}

.ti-match-date, .ti-match-bonus{
    font-size: 22rpx;
    color: #555;
    margin-top: 8rpx;
}

.ti-match-logo{
    width: 108rpx;
    height: 75rpx;
}
