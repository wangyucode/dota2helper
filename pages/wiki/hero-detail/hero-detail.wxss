  margin-right: 25rpx;
}

.list-item-image2 {
  width: 80rpx;
  height: 80rpx;
}

.list-item-text {
  font-size: 26rpx;
  color: white;
}

.list-title {
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  margin-left: 25rpx;
  display: flex;
  align-items: center;
}

.text-name {
  font-size: 34rpx;
  color: black;
  font-weight: bold;
  margin-left: 12rpx;
}

.list-title-history {
  font-size: 34rpx;
  color: black;
  font-weight: bold;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.history-view {
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.history-item {
  display: flex;
  flex-direction: row;
}

.history-image {
  margin-top: 15rpx;
  width: 200rpx;
  height: 100rpx;
}

.history-text {
  margin-left: 10rpx;
