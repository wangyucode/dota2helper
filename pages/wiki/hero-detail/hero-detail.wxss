  font-size: 30rpx;
  line-height: 1.5;
}

.shu-view {
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.shu-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 10rpx;
}

.shu-image {
