<!-- pages/news/news.wxml-->

<view class='home-container'>
  <block wx:for='{{newsArray}}' wx:key='href'>
    <view class='container-list' bindtap='enterNewsDetail' data-item='{{item}}'>
      <view class='container-image'>
        <image class='container-list-image' src='{{item.img}}' mode='aspectFill'></image>
      </view>
      <view class='contents-view'>
        <text class='contents-title'>{{item.title}}</text>
        <text class='contents-message'>{{item.content}}</text>
        <text class='contents-time'>{{item.date}}</text>
      </view>
    </view>
    <view class='line'></view>
  </block>
</view>