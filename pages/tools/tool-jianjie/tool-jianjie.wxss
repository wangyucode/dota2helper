.view-container{
  display: flex;
  flex-direction: column;
  margin: 15rpx;
}

.top-view{
  display: flex;
  flex-direction: row;
  position: relative;
  height: 200rpx;
  align-items: center;
  justify-content: center;
}

.top-image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.top-name{
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  font-size: 26rpx;
  color: white;
}

.top-text{
  flex: 1;
  font-size: 26rpx;
  margin-left: 25rpx;
}

.line{
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  height: 3rpx;
  width: 100%;
  background: #a0a0a0;
}

.view-contents{
  display: flex;
  flex-direction: column;
}

.item-container{
  display: flex;
  flex-direction: column;
}

.info-title{
  font-size: 30rpx;
  /* color: #0099ff; */
}

.info-detail{
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  margin-top: 15rpx;
  line-height: 35rpx;
}

.dian{
  width: 10px;
  height: 4px;
  /* border-radius: 10rpx; */
  background: blue;
  margin-top: 10rpx;
}

.dian-skill{
  width: 4px;
  height: 4px;
  /* border-radius: 10rpx; */
  background: blue;
  margin-top: 10rpx;
}

.info-contents{
  font-size: 26rpx;
  margin-left: 15rpx;
}

.imageinfo-detail{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.image-container{
display: flex;
flex-direction: column;
align-items: center;
}

.image-detail{
  width: 150rpx;
  height: 150rpx;
  margin: 15rpx;
  border-radius: 10rpx;
}

.image-info{
  font-size: 26rpx;
}